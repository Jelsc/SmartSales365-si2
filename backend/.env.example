# Base de datos PostgreSQL
POSTGRES_DB=inventario
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST=127.0.0.1
POSTGRES_PORT=5432

# Django
DJANGO_DEBUG=1
DJANGO_SECRET_KEY=your-secret-key-here
# '*' permite cualquier host (recomendado para Docker y EC2)
DJANGO_ALLOWED_HOSTS=*
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@inventario.local
DJANGO_SUPERUSER_PASSWORD=admin

# Detección automática de IP (para AWS EC2 y entornos cloud)
AUTO_DETECT_IP=true
# CORS automático para todos los orígenes (recomendado para Docker y EC2)
CORS_ALLOW_ALL_ORIGINS=True

# Frontend URLs (para CORS y redirecciones)
FRONTEND_URL=http://localhost:5173
FRONTEND_URL_ALT=http://127.0.0.1:5173

# Google OAuth
GOOGLE_OAUTH2_CLIENT_ID=your-google-client-id
GOOGLE_OAUTH2_CLIENT_SECRET=your-google-client-secret

# Email (MailHog para desarrollo)
EMAIL_HOST=mailhog
EMAIL_PORT=1025
EMAIL_USE_TLS=False
EMAIL_USE_SSL=False
DEFAULT_FROM_EMAIL=noreply@inventario.local

# Site ID para allauth
SITE_ID=1
ACCOUNT_EMAIL_VERIFICATION=none

# Stripe
STRIPE_PUBLIC_KEY=your-stripe-public-key
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret